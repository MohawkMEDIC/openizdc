<?xml version="1.0" encoding="UTF-8"?>
<AppletManifest xmlns="http://openiz.org/applet">
  <info id="org.openiz.applet.register" version="0.5.0.0">
    <icon>@drawable/cogs</icon>
    <name lang="en">Registration</name>
    <name lang="sw">Daftari</name>
    <groupName lang="en">Administration</groupName>
    <groupName lang="sw">Utawala</groupName>
    <author>OpenIZ.org Community</author>
    <dependency id="org.openiz.core" version="0.5.0.0"/>
    <demand></demand>
  </info>
  <menuItem launch="app://openiz.org/applet/org.openiz.applet.register/index">
    <icon>app://openiz.org/drawable/cogs.png</icon>
    <text lang="en">Register</text>
    <text lang="sw">Daftari</text>
  </menuItem>
  <asset name="index" mimeType="text/html">
    <contentHtml>
      <bundle>jquery</bundle>
      <bundle>bootstrap</bundle>
      <bundle>select2</bundle>
      <bundle>angular</bundle>
      <style>bootstrap-alterations</style>
      <script>index-controller</script>
      <content lang="en">
        <body xmlns="http://www.w3.org/1999/xhtml" ng-controller="RegisterController">
          <div class="container">
            <div class="row">
              <div class="col-xs-12">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">Register</h3>
                  </div>
                  <div class="panel-body">
                    <form id="registerForm" action="" onsubmit="">
                      <div class="form-group" id="userName">
                        <label for="userNameInput" class="control-label">
                          Username
                        </label>
                        <div class="">
                          <input type="text" name="userName" id="userNameInput" class="form-control" placeholder="Username"/>
                        </div>
                        <span id="error-userName" class=""></span>
                      </div>
                      
                      <div class="form-group" id="givenName">
                        <label for="givenNameInput" class="control-label">
                          Given Name
                        </label>
                        <div class="">
                          <input type="text" name="givenName" id="givenNameInput" class="form-control" placeholder="Given Name"/>
                        </div>
                        <span id="error-givenName" class="row"></span>
                      </div>

                      <div class="form-group" id="familyName">
                        <label for="familyNameInput" class="control-label">
                          Family Name
                        </label>
                        <div class="">
                          <input type="text" name="familyName" id="familyNameInput" class="form-control" placeholder="Family Name"/>
                        </div>
                        <span id="error-familyName" class=""></span>
                      </div>

                      <div class="form-group" id="email">
                        <label for="emailInput" class="control-label">
                          Email
                        </label>
                        <div class="">
                          <input type="text" name="email" id="emailInput" class="form-control" placeholder="Email"/>
                        </div>
                        <span id="error-email" class=""></span>
                      </div>

                      <div class="form-group">
                        <label for="phoneNumberInput" class="control-label">
                          Phone Number
                        </label>
                        <div class="">
                          <input type="text" name="phoneNumber" id="phoneNumberInput" class="form-control" placeholder="Phone Number"/>
                        </div>
                        <span id="error-phoneNumber" class=""></span>
                      </div>
                      
                      <div class="form-group">
                        <label for="passwordInput" class="control-label">
                          Password
                        </label>
                        <div class="">
                          <input type="password" name="password" id="passwordInput" class="form-control" placeholder="Phone Number"/>
                        </div>
                        <span id="error-password" class=""></span>
                      </div>
                      <div class="form-group">
                        <label for="confirmPasswordInput" class="control-label">
                          Confirm Password
                        </label>
                        <div class="">
                          <input type="password" name="confirmPassword" id="confirmPasswordInput" class="form-control" placeholder="Phone Number"/>
                        </div>
                        <span id="error-confirmPassword" class=""></span>
                      </div>
                      <div class="form-group">
                          <a type="submit" class="btn btn-success" href="app://openiz.org/applet/org.openiz.applet.login/index">Register</a>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- OpenIZ:Scripts -->
        </body>
      </content>
    </contentHtml>
  </asset>
  <asset name="bootstrap-alterations" mimeType="text/css">
    <contentText>
      .panel.panel-default {
      margin-top: 10px;
      font-size: 125%;
      }
      
      input{
      width: 95%;
      }
    </contentText>
  </asset>
  <asset name="index-controller" mimeType="text/javascript">
    <contentText>
      <![CDATA[
      
      $(document).ready(function(){
      
        if ($("#Password").val() != $("#ConfirmPassword").val()) {
          alert("Passwords do not match.");
        }
      
      
      });
      
      var registerApp = angular.module('index', []);

		  registerApp.controller('RegisterController', ['$scope', function ($scope)
		  {	
			$scope.login = function(username, password) {   
      };
          
	    }]);  
    
      ]]>
    </contentText>
  </asset>
</AppletManifest>